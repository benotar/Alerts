<UserControl x:Class="Alerts.WPF.Controls.RegionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Alerts.WPF.Controls"
             mc:Ignorable="d"
             >
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="White"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    
    <StackPanel Background="#2F2F2F"
                Orientation="Horizontal"
                Loaded="RegionControlLoad">
        <Label Content="Регіон:"
               Style="{StaticResource LabelStyle}"/>
        
        <Label Content="{Binding region}"
               Style="{StaticResource LabelStyle}"
               x:Name="RegionNameLabel"/>
        
    </StackPanel>
</UserControl>
